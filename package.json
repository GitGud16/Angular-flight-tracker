{
  "name": "angular-flight-tracker",
  "version": "1.0.0",
  "description": "Real-time flight tracking application with Angular and Node.js",
  "scripts": {
    "install:all": "cd backend && npm install && cd ../flight-tracker && npm install",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd flight-tracker && ng serve",
    "dev:backend": "cd backend && npm run dev",
    "build:frontend": "cd flight-tracker && ng build",
    "health": "curl http://localhost:3000/health"
  },
  "keywords": ["angular", "nodejs", "flight-tracker", "opensky", "real-time"],
  "author": "Ahmed Alsaggaf",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/Angular-Flight-Tracker.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
} 